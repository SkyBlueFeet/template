<div class="main">
    <div class="main-operate">
        <button class="s-btn s-btn__primary s-btn__square">添加模块</button>
        <button id="editModule" class='s-btn s-btn__royal s-btn__square' disabled>编辑模块</button>
        <button id="deleteModule" class="s-btn s-btn__danger is-plain s-btn__square">删除模块</button>
    </div>
    <div class="main-table">
        <table class="s-table">
            <thead>
                <tr>
                    <td>
                        <label class="checkblock">
                            <input id="checkall" type="checkbox" />
                            <i class="s-icon__checkbox"></i>
                        </label>
                    </td>
                    <td>模块名</td>
                    <td>父模块</td>
                    <td>标识</td>
                    <td>排序</td>
                    <td>链接</td>
                    <td>备注</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="s-modal">
    <div class="s-modal__dialog">
        <div class="s-modal__titel">模块</div>
        <div class="s-modal__body">
            <form>
                <div class="s-input__feild">
                    <label for="title">模块名</label>
                    <input id="title" autocomplete="off" class="s-input__text" value="" type="text" />
                    <input id="id" autocomplete="off" value="" type="hidden" />
                </div>
                <div class="s-input__feild">
                    <label for="parent">父模块</label>
                    <select id="parent" class="s-select">

                    </select>
                </div>
                <div class="s-input__feild">
                    <label for="key">标识</label>
                    <input id="key" autocomplete="off" class="s-input__text" value="" type="text" />
                </div>
                <div class="s-input__feild">
                    <label for="order">排序</label>
                    <input id="order" autocomplete="off" class="s-input__text" value="" type="text" />
                </div>
                <div class="s-input__feild">
                    <label for="link">链接</label>
                    <input id="link" autocomplete="off" class="s-input__text" value="" type="text" />
                </div>
                <div class="s-input__feild">
                    <label for="remark">备注</label>
                    <input id="remark" autocomplete="off" class="s-input__text" value="" type="text" />
                </div>
            </form>
        </div>
        <div class="s-modal__footer">
            <button id="modal-close" class="s-btn s-btn__default s-btn__small s-btn__square">关闭</button>
            <button id="modal-save" class="s-btn s-btn__primary s-btn__small s-btn__square">保存</button>
        </div>
    </div>
</div>