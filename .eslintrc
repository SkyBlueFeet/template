{
    "root": true,
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": 2015,
        "sourceType": "module",
        "ecmaFeatures": {
            "legacyDecorators": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    // https://github.com/standard/standard/blob/master/docs/RULES-en.md

    "globals": {
        "_": true
    },
    "overrides": [
        {
            "files": ["*.js", "*.jsx"],
            "parser": "babel-eslint",
            "extends": [
                "eslint:recommended",
                "google",
                "plugin:prettier/recommended"
            ]
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended",
                "plugin:vue/essential",
                "plugin:prettier/recommended"
            ]
        },
        {
            "files": ["*.vue"],
            "parser": "vue-eslint-parser",
            "parserOptions": {
                "parser": "babel-eslint"
            },
            "extends": [
                "eslint:recommended",
                "plugin:vue/essential",
                "plugin:prettier/recommended"
            ]
        },
        {
            "files": ["*.tsx", "*.jsx", "*.vue"],
            "rules": {
                "@typescript-eslint/no-unused-vars": [0, "always"],
                "no-unused-vars": 0
            }
        }
    ],
    "plugins": ["react", "vue", "html"]
}
