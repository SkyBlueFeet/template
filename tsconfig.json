{
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": false,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "es5",
    "alwaysStrict": true,
    "importHelpers": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@root/*": ["/*"]
    },
    "noEmit": false,
    "lib": ["ES2015", "DOM", "ES2016", "ES2017"],
    "types": ["node", "webpack", "webpack-env"]
  },
  "include": ["src", "define"],
  "exclude": ["node_modules", "dist", ".*", "config"]
}
